<idea-plugin>
    <id>io.github.takc923.isearch</id>
    <name>isearch</name>
    <vendor url="https://github.com/takc923/isearch">takc923</vendor>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <actions>
        <action id="ISearchBackward" class="io.github.takc923.ISearchBackwardAction" text="isearch-backward">
            <keyboard-shortcut first-keystroke="meta R" keymap="$default"/>
        </action>
        <action id="ISearchForward" class="io.github.takc923.ISearchForwardAction" text="isearch-forward">
            <keyboard-shortcut first-keystroke="meta S" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>